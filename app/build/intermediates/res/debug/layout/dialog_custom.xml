<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
   >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Contact Info"
        android:textSize="37dip"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/welcome"
        android:layout_gravity="center"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/OrangeRed"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/welcome"
        android:layout_gravity="center"
        android:id="@+id/view" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:useDefaultMargins="true"
        android:alignmentMode="alignBounds"
        android:columnOrderPreserved="false"
        android:columnCount="10"
        android:rowCount="14"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view">

        <TextView
            android:text="Name"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:textColor="@color/Black"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            android:id="@+id/nameText"
            android:ems="10"
            android:hint="contact user"
            android:layout_gravity="right"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="9" />

        <TextView
            android:text="status"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="30px"
            android:layout_column="0"
            android:textColor="@color/Black"
            android:layout_row="3" />

        <TextView
            android:ems="10"
            android:id="@+id/statusText"
            android:hint="I'm here right now "
            android:layout_row="3"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_columnSpan="9" />

        <TextView
            android:text="JID"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="30px"
            android:layout_column="0"
            android:textColor="@color/Black"
            android:layout_row="4" />

        <TextView
            android:ems="10"
            android:id="@+id/jidText"
            android:hint="1234567890"
            android:layout_row="4"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_columnSpan="9" />

        <TextView
            android:text="Presence"
            android:textStyle="normal"
            android:textSize="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="30px"
            android:layout_column="0"
            android:textColor="@color/Black"
            android:layout_row="5" />

        <TextView
            android:ems="10"
            android:id="@+id/presenceText"
            android:hint="available"
            android:layout_row="5"
            android:layout_gravity="right"
            android:layout_column="1"
            android:layout_columnSpan="9" />

    </GridLayout>


    <Button
        android:id="@+id/button_start"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:text="Chat with Contact"
        android:textSize="25sp"
        android:background="@color/Green"
        android:layout_row="13"
        android:layout_column="9"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/button_delete"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:text="Delete Contact"
        android:textSize="25sp"
        android:background="@color/OrangeRed"
        android:layout_below="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

</RelativeLayout><!-- From: file:/Users/lyos2210/AndroidStudioProjects/SimpleClientXMPP/app/src/main/res/layout/dialog_custom.xml -->